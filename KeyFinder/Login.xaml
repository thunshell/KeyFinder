<Window x:Class="KeyFinder.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyFinder"
        mc:Ignorable="d"
        Title="Login" SizeToContent="WidthAndHeight" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen" Topmost="True">
    <Border BorderThickness="2" BorderBrush="LightGray">
        <DockPanel>
            <Button Width="50" Foreground="Gray" DockPanel.Dock="Left" Click="CloseClick" UseLayoutRounding="True" SnapsToDevicePixels="True" RenderOptions.EdgeMode="Unspecified">
                <Grid>
                    <Line X1="15" X2="15" Y1="0" Y2="20" Stroke="PaleVioletRed" StrokeThickness="3" />
                    <Ellipse Margin="0,5,0,0" Width="30" Height="30" Stroke="PaleVioletRed" StrokeThickness="3" />
                </Grid>
            </Button>
            <Button Width="50" Content="->" DockPanel.Dock="Right" IsDefault="True" FontSize="30" Click="LoginClick" />
            <PasswordBox x:Name="password" Width="400" Height="50" FontSize="30" BorderThickness="0" VerticalContentAlignment="Center" />
        </DockPanel>
    </Border>
</Window>
